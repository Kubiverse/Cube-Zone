{
  "name": "social-cubing-ui",
  "version": "1.0.5",
  "description": "A social cubing application",
  "author": "James",
  "private": true,
  "scripts": {
    "dev": "set DEV=1 && nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ignore-path .gitignore --ext .js,.vue .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|vue)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-format lint"
  },
  "dependencies": {
    "@nuxtjs/apollo": "^4.0.1-rc.1",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "graphql-tag": "^2.10.4",
    "js-cookie": "^2.2.1",
    "moment": "^2.27.0",
    "nuxt": "^2.13.3",
    "nuxt-clipboard2": "^0.2.1",
    "pusher-js": "^7.0.1",
    "randomstring": "^1.1.5",
    "scramble-display": "^0.1.1",
    "vue-tour": "^1.4.0",
    "vuedraggable": "^2.24.0"
  },
  "devDependencies": {
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/vuetify": "^1.11.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "vue-eslint-parser": "^7.1.0"
  },
  "lint-staged": {
    "**/*.+(js|vue)": [
      "npm run lint"
    ],
    "**/*.+(js|json|vue)": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
